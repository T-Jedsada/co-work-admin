<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.flukepc.coworkadmin.ui.detail.DetailActivity">

    <ImageView
        android:id="@+id/tvImage"
        android:src="@color/cardview_dark_background"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/nameCoWorking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:padding="10sp"
        android:textSize="@dimen/text_title"
        tools:ignore="SpUsage"
        tools:text="Co-Working Name" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        tools:text="Suthep,Cjiangmai" />

    <TextView
        android:id="@+id/Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        tools:text="Contact: 0816117137" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        tools:text="status: approve/reject" />

    <TextView
        android:id="@+id/rarting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        tools:text="rarting:" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        tools:text="price:" />

    <fragment
        android:id="@+id/mapCoWork"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/circularPrice2"
        android:layout_marginTop="@dimen/text_title" />

</LinearLayout>
</ScrollView>